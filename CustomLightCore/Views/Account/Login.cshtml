@model CustomLightCore.ViewModels.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<meta charset="utf-8">
    <title>Login</title>
</head>
<body>
	<h2>Вход</h2>

	@*<a asp-action="Register" asp-controller="Account">Регистрация</a>*@

	<form asp-action="Login" asp-antiforgery="true">
		<div class="validation" asp-validation-summary="ModelOnly"></div>
		<div>
			<div class="form-group">
				<label asp-for="UserName">Введите логин</label>
				<input asp-for="UserName" />
				<span asp-validation-for="UserName"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password">Введите пароль</label>
				<input asp-for="Password" />
				<span asp-validation-for="Password"></span>
			</div>
			<div class="form-group">
				<label asp-for="RememberMe">Запомнить меня</label>
				<input asp-for="RememberMe" />
				<span asp-validation-for="RememberMe"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Войти" class="btn" />
			</div>
		</div>
	</form>
</body>
</html>
