@model CustomLightCore.ViewModels.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<meta charset="utf-8">
    <title>Register</title>
</head>
<body>
	<h2>Регистрация</h2>

	<form asp-action="Register" method="post" asp-controller="Account">
		<div class="validation" asp-validation-summary="ModelOnly"></div>
		<div>
			<label asp-for="Login">Введите логин</label>
			<input type="text" asp-for="Login" />
			<span asp-validation-for="Login"></span>
		</div>
		<div>
			<label asp-for="Password">Введите пароль</label>
			<input type="password" asp-for="Password" />
			<span asp-validation-for="Password"></span>
		</div>
		<div>
			<label asp-for="ConfirmPassword">Повторите пароль</label>
			<input type="password" asp-for="ConfirmPassword" />
			<span asp-validation-for="ConfirmPassword"></span>
		</div>
		<div>
			<input type="submit" value="Регистрация" />
		</div>
	</form>
</body>
</html>
