@model CustomLightCore.ViewModels.Pages.PageCreateViewModel

@{
	ViewData["Title"] = "Создать страницу";
	Layout = "~/Views/_Layouts/_Admin.cshtml";
}

<h2>Создание</h2>

<form asp-action="Create">
	<div class="form-horizontal">
		<h4>Страница</h4>
		<hr />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="Alias" class="col-md-2 control-label">Алиас</label>
			<div class="col-md-10">
				<input asp-for="Alias" class="form-control" />
				<span asp-validation-for="Alias" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Name" class="col-md-2 control-label">Название</label>
			<div class="col-md-10">
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="PageContent" class="col-md-2 control-label">Содержимое</label>
			<div class="col-md-10">
				<textarea asp-for="PageContent" class="form-control"></textarea>
				<span asp-validation-for="PageContent" class="text-danger"></span>
			</div>
		</div>
		@*<div class="form-group">
			<label asp-for="Created" class="col-md-2 control-label"></label>
			<div class="col-md-10">
				<input asp-for="Created" class="form-control" />
				<span asp-validation-for="Created" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Updated" class="col-md-2 control-label"></label>
			<div class="col-md-10">
				<input asp-for="Updated" class="form-control" />
				<span asp-validation-for="Updated" class="text-danger"></span>
			</div>
		</div>*@
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Создать" class="btn btn-primary" />
			</div>
		</div>
	</div>
</form>

<div>
	<a asp-action="List"><input type="button" class="btn btn-default" value="Вернуться к списку" /></a>
</div>

<script>
	CKEDITOR.replace('PageContent');
</script>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
