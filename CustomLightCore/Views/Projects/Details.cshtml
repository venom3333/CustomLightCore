@model CustomLightCore.Models.Project

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/_Layouts/_Main.cshtml";
}

<!--Инфо о продукте-->
<div class="col-md-10 Project-model-sec">
	<h2 id="ProjectName">@Model.Name</h2>

	<!--	Не отображается (нужно для корзины)-->
	@*<div id="ProjectIcon" style="display: none;"><?= $Project['icon'] ?></div>*@
	<div id="ProjectId" style="display: none;">>@Model.Id</div>
	<!--	/Не отображается (нужно для корзины)-->
<!--Галерея-->
    <section>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators image-carousel-indicators">
                @{
                    for (int i = 0; i < Model.ProjectImages.Count; i++)
                    {
                        <li data-target="#myCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")">
                            <img src="@Url.Action("GetProjectImage", "Projects", new { imageId = Model.ProjectImages.ToList()[i].Id })" class="img-responsive" alt="@Model.Name">
                        </li>
                    }
                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @{
                    for (int i = 0; i < Model.ProjectImages.Count; i++)
                    {
                        <div class="item @(i == 0 ? "active" : "")">
                            <img src="@Url.Action("GetProjectImage", "Projects", new { imageId = Model.ProjectImages.ToList()[i].Id })" alt="@Model.Name">
                        </div>
                    }
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>
<!--/Галерея-->
	
	<section class="itemDescription">
		<p>@Html.Raw(Model.Description)</p>
	</section>

	<!--/Инфо о продукте-->
	@*<script src="~/Content/js/cart.js"></script>*@
</div>